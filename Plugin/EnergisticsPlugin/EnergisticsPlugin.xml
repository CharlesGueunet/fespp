<ServerManagerConfiguration>
	<ProxyGroup name="sources">
		
		<SourceProxy name="EnergisticsPlugin" 
			class="EnergisticsPlugin" 
			label="Energistics Packaging Conventions (EPC) Reader">
			<Documentation short_help="A reader for an Energistics standard data format used by
			  various geosciences applications.">A reader for an Energistics standard data format used by
			  various geosciences applications. The underlying
			  format uses OPC to store XML documents and links to an HDF5 file
			  which stores the numerical data arrays into HDF5 datasets.</Documentation>
			<Hints>
				<ReaderFactory extensions="epc" 
							   file_description="EPC files"
							   filename_patterns="*.epc" />
    			<PipelineIcon name="CINEMA_MARK"/>
  			</Hints>

<!-- Files List loaded: --> 
      <StringVectorProperty clean_command="ClearFileNames"
                            command="AddFileName"
                            name="FileName"
                            number_of_elements="1"
                            panel_visibility="never"
                            repeat_command="1">
        <FileListDomain name="files" />
        <Documentation>This property specifies the file name for the epc reader.</Documentation>
      </StringVectorProperty>

	  	<!-- OLD => DELETE ?
			<StringVectorProperty
		        name="FilesInfo"
		        information_only="1"        
		        default = "1">
		        <ArraySelectionInformationHelper attribute_name="FilesList"/>
			</StringVectorProperty>
			
			<StringVectorProperty name="FilesList"
				repeat_command="1"
				information_property="FilesInfo" 
				label="files loaded"
				panel_visibility="default">
				<Documentation>List files loaded...</Documentation>

			</StringVectorProperty>
			    <Property animateable="0"
                	command="AddFile"
                	name="Add epc file">
        		<Documentation>Add epc file to data repository.</Documentation>
      		</Property>
			-->

<!-- TimeStepValues for Time series -->
      <DoubleVectorProperty information_only="1" name="TimestepValues" repeatable="1">
        <TimeStepsInformationHelper />
      </DoubleVectorProperty>

<!-- treeView Selection --> 
      <IntVectorProperty name="AssemblyTag"
        command="GetAssemblyTag"
        information_only="1">
        <Documentation>
          This is simply an int that changes whenever a new assembly is built
          by the reader. This can be used to determine if the assembly should be fetched from
          the reader whenever the reader is updated.
        </Documentation>
      </IntVectorProperty>

      <StringVectorProperty name="AssemblySelectors"
        command="AddSelector"
        clean_command="ClearSelectors"
        repeat_command="1"
        number_of_elements_per_command="1"
        panel_widget="data_assembly_editor" >
        <DataAssemblyDomain name="data_assembly">
          <RequiredProperties>
            <Property function="Tag" name="AssemblyTag" />
          </RequiredProperties>
        </DataAssemblyDomain>
        <Documentation>
          Specify the selectors for the data assembly chosen using **Assembly**
          to choose the blocks to extract from the input dataset.
        </Documentation>
        <Hints>
          <!-- AssemblyTag == 0 implies there's no assembly in the file,
          in which case, we want to hide this widget entirely -->
          <PropertyWidgetDecorator type="GenericDecorator"
            mode="visibility"
            property="AssemblyTag"
            value="0"
            inverse="1" />
        </Hints>
      </StringVectorProperty>

<!-- Wellbore marker properties: -->
	<!-- enable/disable Marker orientation -->
			<IntVectorProperty name="MarkerOrientation"
            	command="setMarkerOrientation"
                number_of_elements="1"
                default_values="1">
    			<BooleanDomain name="bool"/>
			</IntVectorProperty>
	<!-- marker size -->
			<IntVectorProperty name="MarkerSize"
            	command="setMarkerSize"
                number_of_elements="1"
                default_values="10">
			</IntVectorProperty>
			
			<PropertyGroup label="Wellbore marker" panel_visibility="panel_widget">
   				<Property name="MarkerOrientation" />
   				<Property name="MarkerSize" />
			</PropertyGroup>

		</SourceProxy>
		
	</ProxyGroup>
<!-- End Reader -->
 </ServerManagerConfiguration>
